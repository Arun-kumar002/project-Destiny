<section id="registerPage">
     <article class="top">
        <div>Register Now</div>
    </article>
    <article class="bottom">
        <aside class="left">
            <figure><img src="../../images/login/left-img.webp" alt=""></figure>
        </aside>
        <aside class="right">
            <form action="/user/register" method="POST" novalidate>
            <div>
                <input type="text" name="username" placeholder="enter your name" required>
            </div>
            <div>
                <input type="text" name="email" placeholder="enter your email" required>
            </div>
             <div>
                <input type="tel" name="mobile" placeholder="enter your mobile" required>
            </div>
            <div>
                <input type="password" name="password" placeholder="enter password" required>
            </div>
            <div>
                <input type="password" name="confirmpassword" placeholder="enter password again" required>
            </div>
            <div>
                <input type="hidden" name="udetails" id="udetails" placeholder="udetails">
            </div>
            <div>
            <button>Submit</button>
            </div>
        </form>
        </aside>
    </article>
     <article class="marquee">
        <marquee behavior="scroll" direction="up" scrollAmount="2" class="">
         <p>Register for great deals and offers</p>   
      <p>Book your first international trip</p>  
    <p>Join the club of happy travellers</p> 
        </marquee>
     </article>
</section>